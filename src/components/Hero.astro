---
import heroBg from '../images/hero/hero-bg.webp';
import HeroImage from './ui/HeroImage.astro';
import HeroContent from './ui/HeroContent.astro';
---

<section
        id="hero"
        class="relative w-full min-h-screen flex items-center justify-center ikara-gradient text-white px-4 pt-40 pb-20">

    <!-- Low-res blurred image placeholder -->
    <HeroImage src={heroBg} alt="Blurred background of a serene landscape"/>

    <!-- Hero content -->
    <HeroContent/>

    <!-- Scroll indicator -->
    <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-30 animate-bounce">
        <svg
                class="w-6 h-6 text-white opacity-70"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
        >
            <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 14l-7 7m0 0l-7-7m7 7V3"
            />
        </svg>
    </div>
</section>

<style>
    .text-gradient-modern {
        background: linear-gradient(to right, #a0aec0, #edf2f7, #f7fafc);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

</style>
