---
import {Image} from 'astro:assets';
---

<div class="absolute inset-0 z-0">
  <Image
      src={Astro.props.src}
      alt={Astro.props.alt}
      class="w-full h-full object-cover filter blur-2xl scale-100"
      loading="lazy"
      decoding="async"
      sizes="100vw"
  />
</div>

<div class="absolute inset-0 z-10 transition-opacity duration-1000 opacity-0" id="hero-full">
  <Image
      src={Astro.props.src}
      alt={Astro.props.alt}
      class="w-full h-full object-cover brightness-75"
      loading="lazy"
      decoding="async"
      sizes="100vw"
      onload="document.getElementById('hero-full').classList.remove('opacity-0')"
  />
</div>

<div class="absolute inset-0 bg-gradient-to-b from-black/20 to-black/20 z-10"></div>