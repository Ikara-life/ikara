---
import '../styles/global.css';
import Navbar from "../components/Navbar";
import Hero from '../components/Hero.astro';
import Ikara from "../components/Ikara.astro";
import Experience from "../components/Experience.astro";
import About from "../components/About.astro";
import Apply from "../components/Apply.astro";
import Footer from "../components/Footer.astro";
import Layout from '@/layouts/Layout.astro';

// SEO metadata
const title = "Ikara - A New Rhythm for Living";
const description = "Ikara - A modern retreat for remote workers, founders, and creatives to reconnect with purpose, peace, and presence.";
---

<Layout>
    <meta slot="head" charset="UTF-8"/>
    <meta slot="head" name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta slot="head" name="description" content={description}/>
    <meta slot="head" name="keywords"
          content="Ikara, retreat, remote work, mindfulness, creativity, wellness, Arunachal Pradesh, nature, balance"/>
    <meta slot="head" name="author" content="Ikara Team"/>
    <meta slot="head" property="og:title" content={title}/>
    <meta slot="head" property="og:description"
          content="Discover Ikara, a serene retreat designed to help you reconnect with yourself, your work, and the world."/>
    <meta slot="head" property="og:image" content="/images/hero-bg.webp"/>
    <meta slot="head" property="og:url" content="https://ikara.app"/>
    <meta slot="head" property="og:type" content="website"/>
    <meta slot="head" name="twitter:card" content="summary_large_image"/>
    <meta slot="head" name="twitter:title" content={title}/>
    <meta slot="head" name="twitter:description"
          content="Join Ikara, a retreat for mindful living and creative exploration."/>
    <meta slot="head" name="twitter:image" content="/images/hero-bg.webp"/>
    <link slot="head" rel="sitemap" href="/sitemap-index.xml"/>
    <title slot="head">{title}</title>

    <Navbar client:load/>
    <main class="bg-white">
        <Hero/>
        <Ikara/>
        <Experience/>
        <About/>
        <Apply/>
    </main>
    <Footer/>
</Layout>

<style is:global>
    :root {
        --astro-code-color-text: #ffffff;
        --astro-code-color-background: #000000;
        --astro-code-token-constant: #ffffff;
        --astro-code-token-string: #ffffff;
        --astro-code-token-comment: #ffffff;
        --astro-code-token-keyword: #ffffff;
        --astro-code-token-parameter: #ffffff;
        --astro-code-token-function: #ffffff;
        --astro-code-token-string-expression: #ffffff;
        --astro-code-token-punctuation: #ffffff;
        --astro-code-token-link: #ffffff;
    }
</style>
