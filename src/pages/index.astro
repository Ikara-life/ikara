---
import '../styles/global.css';
import Navbar from "../components/Navbar";
import Hero from '../components/Hero.astro';
import Ikara from "../components/Ikara";
import Experience from "../components/Experience";
import About from "../components/About";
import Apply from "../components/Apply";
import Footer from "../components/Footer";
import Layout from '@/layouts/Layout.astro';
---

<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description"
          content="Ikara - A modern retreat for remote workers, founders, and creatives to reconnect with purpose, peace, and presence."/>
    <meta name="keywords"
          content="Ikara, retreat, remote work, mindfulness, creativity, wellness, Arunachal Pradesh, nature, balance"/>
    <meta name="author" content="Ikara Team"/>
    <meta property="og:title" content="Ikara - A New Rhythm for Living"/>
    <meta property="og:description"
          content="Discover Ikara, a serene retreat designed to help you reconnect with yourself, your work, and the world."/>
    <meta property="og:image" content="/images/hero-bg.webp"/>
    <meta property="og:url" content="https://ikara.app"/>
    <meta property="og:type" content="website"/>
    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content="Ikara - A New Rhythm for Living"/>
    <meta name="twitter:description"
          content="Join Ikara, a retreat for mindful living and creative exploration."/>
    <meta name="twitter:image" content="/images/hero-bg.webp"/>
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>Ikara - A New Rhythm for Living</title>
</head>

<body style="background: var(--footer-background)">
<Layout>
    <Navbar client:load/>
    <main style="background: var(--content-background)">
        <Hero/>
        <Ikara client:load/>
        <Experience client:load/>
        <About client:load/>
        <Apply client:load/>
    </main>
    <Footer client:load/>
</Layout>
</body>
</html>

<style is:global>
    :root {
        --astro-code-color-text: #ffffff;
        --astro-code-color-background: #000000;
        --astro-code-token-constant: #ffffff;
        --astro-code-token-string: #ffffff;
        --astro-code-token-comment: #ffffff;
        --astro-code-token-keyword: #ffffff;
        --astro-code-token-parameter: #ffffff;
        --astro-code-token-function: #ffffff;
        --astro-code-token-string-expression: #ffffff;
        --astro-code-token-punctuation: #ffffff;
        --astro-code-token-link: #ffffff;
    }
</style>
